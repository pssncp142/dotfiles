set $displayMod "monitor toggle [s] single [d] dual"

mode $displayMod {

	bindsym d exec xrandr --output DP1 --auto --right-of eDP1
	bindsym s exec xrandr --output DP1 --off
	bindsym m exec xrandr --output DP1 --auto --right-of eDP1 --same-as eDP1
	bindsym r exec nitrogen --restore

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+m mode $displayMod


